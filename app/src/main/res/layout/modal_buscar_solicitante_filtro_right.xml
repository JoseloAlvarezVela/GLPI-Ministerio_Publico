<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lly_mdbsfr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10sp"
    android:background="@drawable/esq_redondeada_blanco"
    android:clickable="false"
    android:orientation="vertical"
    android:padding="5sp"
    android:visibility="gone">

    <TextView
        android:id="@+id/textView63"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/degradado_azul"
        android:clickable="true"
        android:fontFamily="@font/averia_sans_libre_light"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="Buscar por Nombre รณ Apellido"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/tvRequesterSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Ingrese Solicitante a buscar" />

    </LinearLayout>

    <Button
        android:id="@+id/btnRequesterSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar" />

    <!--<SearchView
        android:layout_width="match_parent"
